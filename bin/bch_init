#!/bin/bash

set -ex

# This shouldn't be in the Dockerfile or containers built from the same image
# will have the same credentials.
if [ ! -e "$HOME/.bitcoincash/bitcoincash.conf" ]; then
    mkdir -p $HOME/.bitcoincash

    echo "Creating bitcoincash.conf"

    # Seed a random password for JSON RPC server
    cat <<EOF > $HOME/.bitcoincash/bitcoincash.conf
disablewallet=${DISABLEWALLET:-1}
printtoconsole=${PRINTTOCONSOLE:-1}
rpcuser=${RPCUSER:-bitcoincashrpc}
rpcpassword=${RPCPASSWORD:-`dd if=/dev/urandom bs=33 count=1 2>/dev/null | base64`}
rpcallowip=${RPCALLOWIP:-0.0.0.0/0}
rpcbind=${RPCBIND:-0.0.0.0}
txindex=${TXINDEX:-1}
EOF

fi

cat $HOME/.bitcoincash/bitcoincash.conf

echo "Initialization completed successfully"
